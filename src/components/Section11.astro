---
import Card from "../components/Card.astro";
import Logo from "../components/Logo.astro";

const year = new Date().getFullYear();
---

<footer>
  <Card variant="dark" class="pt-10">
    <!-- Logo -->
    <div class="flex justify-center">
      <a href="/" aria-label="Epic Swagger home" class="text-ink-dark">
        <Logo />
      </a>
    </div>

    <!-- Divider -->
    <div class="bg-divider mt-8 h-px w-full"></div>

    <!-- Link columns -->

    <!-- Bottom bar -->
    <div class="mt-10 pt-6 sm:flex sm:items-center sm:justify-between">
      <p class="text-ink-subtle-dark text-xs">
        © {year} EPIC SWAGGER. All rights reserved.
      </p>
      <nav class="mt-4 flex gap-4 text-xs sm:mt-0">
        <a href="#" class="text-ink-subtle-dark hover:underline">Privacy</a>
        <span class="text-ink-subtle-dark/50">•</span>
        <a href="#" class="text-ink-subtle-dark hover:underline">Terms</a>
        <span class="text-ink-subtle-dark/50">•</span>
        <a href="#" class="text-ink-subtle-dark hover:underline">Cookies</a>
      </nav>
    </div>
  </Card>
</footer>
