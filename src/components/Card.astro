---
// src/components/Card.astro
export interface Props {
  id?: string;
  title?: string;
  variant?: "light" | "dark";
  class?: string;
  style?: string;
}

const {
  id,
  title,
  variant = "light",
  class: className = "",
  style = "",
} = Astro.props;

const tone =
  variant === "light"
    ? "bg-surface border border-divider text-ink" // Slightly adjusted colors for better contrast
    : "bg-surface-dark text-ink-dark";
---

<section
  id={id}
  class={`mb-5 rounded-2xl ${tone} ${className}`}
  style={style}
  data-bg={variant}
>
  <div class="mx-auto max-w-6xl px-4 py-16 sm:px-6">
    <!-- Named slot with fallback header -->
    <slot name="header">
      {
        title && (
          <div class="mb-8">
            <h2 class="font-brand mb-2 text-sm font-bold tracking-wider uppercase">
              {title}
            </h2>
            <div class="bg-brand-100 h-[3px] w-full" />
          </div>
        )
      }
    </slot>

    <slot />
    <slot name="footer" />
  </div>
</section>
