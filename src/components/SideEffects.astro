---
import MediaRight from "../components/MediaRight.astro";
import sideEffectsImg from "../assets/side-effects-card.jpg";
---

<MediaRight img={sideEffectsImg} alt="Muscular figure in gym">
  <h2
    class="mb-4 text-3xl font-bold tracking-tight md:text-4xl lg:mb-6 lg:text-5xl"
  >
    SIDE EFFECTS
  </h2>

  <h5 class="mb-6 font-bold lg:mb-8">
    OF EPIC SWAGGER MAY INCLUDE SOME OR ALL OF THE FOLLOWING:
  </h5>

  <div
    class="grid grid-cols-2 gap-x-3 gap-y-2 text-xs md:gap-x-6 md:gap-y-3 md:text-sm lg:text-base"
  >
    <div class="space-y-2 md:space-y-3">
      <div class="font-semibold tracking-wider">RESPECT</div>
      <div class="font-semibold tracking-wider">VITALITY</div>
      <div class="font-semibold tracking-wider">TRUST</div>
    </div>
    <div class="space-y-2 md:space-y-3">
      <div class="font-semibold tracking-wider">BETTER HEALTH</div>
      <div class="font-semibold tracking-wider">BETTER SEX</div>
      <div class="font-semibold tracking-wider">INFLUENCE</div>
    </div>
  </div>
</MediaRight>
